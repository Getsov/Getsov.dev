---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const features = [
  {
    title: "Web and Hybrid Apps",
    description:
      "I blend Angular, Ionic, Capacitor, HTML5, and CSS3 to deliver web and hybrid apps that play nice with any device. My mantra? Minimalist, yet powerful code.",
    icon: "mdi:handshake",
  },
  {
    title: "Minimalist Code",
    description:
      "Less is more. Always on the lookout for ways to fine-tune my code to perfection.",
    icon: "mdi:feather",
  },
  {
    title: "Eager to Learn",
    description:
      "Curiosity fuels me. Open and ready to learn whatever it takes to make your project pop.",
    icon: "mdi:directions-fork",
  },
  {
    title: "Collaboration is Key",
    description:
      "Git and GitHub aren't just tools; they're part of my teamwork ethos. Let's build something great together.",
    icon: "mdi:graph",
  },
  {
    title: "SEO-Savvy",
    description:
      "Applying professional SEO practices to ensure your project isn't just great, but discoverable.",
    icon: "mdi:search-web",
  },
  {
    title: "Community Advocate",
    description:
      "I'm all about that give-and-take. Actively participating in dev communities and conferences.",
    icon: "mdi:account-group",
  },
];
---

<ContentSection title="About me" id="about-me">
  <Fragment slot="lead">Driven Developer With 6+ Years Under the Belt</Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
          <p class="text-sm text-center text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
