---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import * as packageJSON from "../../package.json";
const astroVersion = packageJSON.devDependencies.astro.substring(1);

const links = [
  {
    url: "https://www.linkedin.com/in/vgetsov/",
    description: "Check my LinkedIn",
    icon: "mdi:linkedin",
  },
  {
    url: "https://twitter.com/ValeriGetsov",
    description: "Check my Twitter",
    icon: "mdi:twitter",
  },
  {
    url: "https://github.com/Getsov",
    description: "Check my GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "mailto:valeri@getsov.dev",
    description: "Contact me",
    icon: "mdi:email",
  },
];
---

<div class="flex flex-col items-center gap-4" id="contact-me">
  <h2
    class="text-6xl font-extrabold tracking-tight text-center gradient-text mb-2"
  >
    Contact me
  </h2>
</div>
<footer
  class="bottom-0 left-0 z-20 p-4 w-full bg-offset border-t border-current shadow md:flex md:items-center md:justify-between md:p-6 flex flex-col justify-center items-center"
>
  <ul class="relative grid grid-cols-4 gap-4 sm:grid-cols-4 mb-2">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <span class="text-sm sm:text-center mt-2"
    >Â© 2023 <a href="https://getsov.dev/" class="hover:underline"
      >Valeri Getsov</a
    >. All Rights Reserved.
  </span>
  <span class="text-sm sm:text-center mt-2"
    >Using <a
      href="https://astro.build/"
      class="hover:underline"
      rel="nofollow"
      target="_blank">Astro</a
    > version {astroVersion}
  </span>
</footer>
